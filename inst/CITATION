citHeader("To cite viridis/viridisLite in publications use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citEntry(
  entry    = "Manual",
  title    = "{viridis} - Colorblind-Friendly Color Maps for R",
  author   = "Garnier, Simon and Ross, Noam and Rudis, Robert and Camargo, AntÃ´nio P.",
  journal  = "",
  year     = year,
  volume   = "",
  number   = "",
  pages    = "",
  note     = note,
  url      = "https://swarm-lab.github.io/viridis/",
  doi      = "",
  textVersion = paste0(
    "Simon Garnier and John Muschelli (", year, "). Rvision - A computer vision library for R. ", note, "."
  )
)
